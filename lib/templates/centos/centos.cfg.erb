install
url --url=http://mirror.nextlayer.at/centos/<%= @data[:parameters][:version] -%>/os/x86_64/
lang en_US.UTF-8
keyboard us
network --onboot yes --bootproto=dhcp
rootpw <%= @data[:password] %>
firewall --enabled --service=ssh
authconfig --enableshadow --passalgo=sha512
selinux --disabled
timezone UTC
bootloader --location=mbr
text
skipx
zerombr
clearpart --all --initlabel
part /boot --fstype ext4 --size=150
part pv.01 --size=1 --grow
volgroup vg_root pv.01
logvol  /  --vgname=vg_root --size=1  --grow --name=
auth --useshadow --enablemd5
firstboot --disabled
reboot
%packages --nobase
@core
bzip2
openssh-clients
openssh-server
%end
%post
/usr/bin/yum -y install sudo
%end

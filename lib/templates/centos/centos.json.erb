{ 
    "builders":
    [
        {
            "name": "centOS",
            "type": "qemu",
            "iso_url": "http://merlin.fit.vutbr.cz/mirrors/centos/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
            "iso_checksum": "e5a2c3c6d245b17e8d6ae2c31d2f34b62c273a0e",
            "iso_checksum_type": "sha1",
            "output_directory": "<%= @data[:output_dir] %>/centOS_7.0",
            "ssh_wait_timeout": "130m",
            "shutdown_command": "shutdown -h now",
            "format": "<%= @data[:format] %>",
            "disk_size": <%= @data[:size] %>,
            "headless": false,
            "accelerator": "kvm",
            "ssh_username": "root",
            "ssh_password": "<%= @data[:password] %>",
            "vm_name": "centOS",
            "boot_command":
              [
              "<esc>",
              " linux ks=<%= @data[:url] %>/centos.cfg",
              "<enter>"
              ]
        }
    ],

    "provisioners":
    [
      {
        "type": "shell",
        "script": "<%= @data[:scripts] %>/centos_cloud_script.sh"
      }
    ]

}


